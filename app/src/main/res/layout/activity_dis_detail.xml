<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".bookcenter.discussion.DisDetailActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:orientation="horizontal"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dd_cover"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:padding="15sp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/kong"
                android:paddingLeft="10sp"
                />
            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/dd_author"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="评论人"
                    android:paddingTop="10sp"
                    android:textColor="#B39640"/>
                <TextView
                    android:id="@+id/dd_time"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1"
                    android:text="评论时间"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/dd_title"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:text="评论标题"
            android:textSize="18sp"
            android:textColor="#000000"
            android:padding="10sp"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:id="@+id/dd_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="评论内容"
            android:textSize="15sp"
            android:padding="12sp"/>

        <TextView
            android:id="@+id/dd_mes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="留言区"
            android:textSize="15sp"
            android:paddingLeft="15sp"/>

    </LinearLayout>



</ScrollView>